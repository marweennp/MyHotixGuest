<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/white">

    <!-- Color Layout Left -->
    <RelativeLayout
        android:layout_width="4dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:background="@color/colorBackground" />
    <!-- Color Layout Right -->
    <RelativeLayout
        android:layout_width="4dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="@color/colorBackground" />

    <!-- Bill Transaction Title -->
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/bill_transaction_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="6dp"
        android:text="Frais de service"
        android:textColor="@color/colorBackground"
        android:textSize="16sp"
        android:textStyle="bold" />

    <!-- Bill Transaction Sum -->
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/bill_transaction_sum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="3dp"
        android:text="00.00"
        android:textColor="@color/light_bg_dark_secondary_text"
        android:textSize="20sp"
        android:textStyle="bold" />


    <!-- Bill Transaction Date -->
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/bill_transaction_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:text="01/01/2018"
        android:textColor="@color/light_bg_dark_secondary_text"
        android:textSize="16sp" />

    <!-- Bottom Divider -->
    <View
        android:id="@+id/bottom_divider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/colorBackground" />


</RelativeLayout>
