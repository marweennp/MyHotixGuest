<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@color/white">

    <!-- Stay Title -->
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/stay_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="6dp"
        android:text="Arrangement"
        android:textColor="@color/light_bg_dark_primary_text"
        android:textSize="16sp"
        android:textStyle="bold" />

    <!-- Stay Sub Title -->
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/stay_sub_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/stay_title"
        android:layout_marginStart="16dp"
        android:text="TypeChambre"
        android:textColor="@color/light_bg_dark_secondary_text"
        android:textSize="12sp" />

    <!-- Stay Nights Text -->
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/stay_nights"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/stay_nights_icon"
        android:layout_alignParentTop="true"
        android:layout_marginTop="6dp"
        android:text="0"
        android:textColor="@color/light_bg_dark_secondary_text"
        android:textSize="16sp" />

    <!-- Stay Nights Text -->
    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/stay_nights_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="6dp"
        android:tint="@color/colorPrimaryDark"
        app:srcCompat="@drawable/baseline_moon_24" />


    <!-- Stay Date -->
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/stay_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="6dp"
        android:layout_marginStart="12dp"
        android:text="dd MMM yyyy"
        android:textColor="@color/light_bg_dark_secondary_text"
        android:textSize="16sp" />

    <!-- Bottom Divider -->
    <View
        android:id="@+id/bottom_divider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/colorBackground" />


</RelativeLayout>
