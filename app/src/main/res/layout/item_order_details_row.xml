<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Order Details Quantite -->
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/order_details_quantite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="3dp"
        android:text="3 *"
        android:textColor="@color/light_bg_dark_secondary_text"
        android:textSize="14sp"
        android:textStyle="bold" />

    <!-- Order Details U Name -->
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/order_details_u_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="3dp"
        android:layout_toStartOf="@+id/order_details_u_price"
        android:layout_toEndOf="@+id/order_details_quantite"
        android:text=""
        android:textColor="@color/colorBackground"
        android:textSize="16sp"
        android:textStyle="bold" />

    <!-- Order Details U Price -->
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/order_details_u_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="3dp"
        android:text=""
        android:textColor="@color/light_bg_dark_secondary_text"
        android:textSize="14sp"
        android:textStyle="bold" />

</RelativeLayout>
