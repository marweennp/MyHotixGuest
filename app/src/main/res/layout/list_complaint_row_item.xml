<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <!-- Color Layout -->
    <RelativeLayout
        android:id="@+id/complaint_color_layout"
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:background="@color/grey_500" />

    <!-- Complaint Title -->
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/complaint_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="6dp"
        android:text=""
        android:textColor="@color/light_bg_dark_primary_text"
        android:textSize="16sp"
        android:textStyle="bold" />

    <!-- Complaint Text -->
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/complaint_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/complaint_title"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="30dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text=""
        android:textColor="@color/light_bg_dark_secondary_text"
        android:textSize="14sp" />

    <!-- Complaint Date Icon -->
    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/complaint_row_date_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="4dp"
        android:tint="@color/colorPrimary"
        app:srcCompat="@drawable/baseline_calendar_today_black_18" />

    <!-- Complaint Date -->
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/complaint_row_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/complaint_row_date_icon"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="4dp"
        android:text=""
        android:textColor="@color/grey_500"
        android:textSize="16sp" />

    <!-- Complaint State -->
    <RelativeLayout
        android:id="@+id/complaint_color_text_layout"
        android:layout_width="90dp"
        android:layout_height="18dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:background="@color/grey_500">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/complaint_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/light_bg_dark_primary_text"
            android:textSize="14sp" />

    </RelativeLayout>

    <!-- Bottom Divider -->
    <View
        android:id="@+id/bottom_divider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/colorBackground" />


</RelativeLayout>
