<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <!-- Message Details Header -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/colorBackground">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/dialog_message_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/message_details"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textStyle="bold" />

    </RelativeLayout>

    <!-- Message Details Title -->
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/message_details_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="title"
        android:textColor="@color/colorBackground"
        android:textSize="16sp"
        android:textStyle="bold" />

    <!-- Message Details Date & Time -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Message Date Icon -->
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/message_details_date_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="4dp"
            android:tint="@color/colorPrimary"
            app:srcCompat="@drawable/baseline_calendar_today_black_18" />

        <!-- Message Date -->
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/message_details_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="4dp"
            android:layout_toEndOf="@+id/message_details_date_icon"
            android:text="01/01/2018"
            android:textColor="@color/light_bg_dark_disabled_text"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Message Time Icon -->
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/message_details_time_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="4dp"
            android:layout_toEndOf="@+id/message_details_date"
            android:tint="@color/colorPrimary"
            app:srcCompat="@drawable/baseline_schedule_black_18" />

        <!-- Message Time -->
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/message_details_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="4dp"
            android:layout_toEndOf="@+id/message_details_time_icon"
            android:text="00:00"
            android:textColor="@color/light_bg_dark_disabled_text"
            android:textSize="16sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <!-- Message Details Phone -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/message_details_phone_view">

        <!-- Message Phone Icon -->
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/message_details_phone_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="4dp"
            android:tint="@color/colorPrimary"
            app:srcCompat="@drawable/ic_phone_white_18" />

        <!-- Message Phone -->
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/message_details_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="4dp"
            android:layout_toEndOf="@+id/message_details_phone_icon"
            android:text="+216 00 000 000"
            android:textColor="@color/light_bg_dark_disabled_text"
            android:textSize="16sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <!-- Message Details Description -->
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/message_details_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="text"
        android:layout_marginRight="16dp"
        android:textColor="@color/light_bg_dark_secondary_text"
        android:textSize="14dp" />

    <!-- Ok Button -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="30dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentTop="true"
            android:alpha=".5"
            android:background="@color/colorBackground" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/message_details_btn_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:text="@string/ok"
            android:textColor="@color/colorPrimaryDark" />

    </RelativeLayout>

</LinearLayout>
