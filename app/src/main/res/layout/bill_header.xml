<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Bill Header -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@color/colorBackground">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/bill_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:text="Facture NÂ°" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/bill_number_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bill_title_text"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="16dp"
            android:text="0001-2018"
            android:textColor="@color/white"
            android:textSize="32dp"
            android:textStyle="bold" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/bill_date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:text="01/01/2018 - 05/01/2018" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/bill_owner_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/bill_date_text"
            android:layout_marginLeft="16dp"
            android:text="Foulan Foulani"
            android:textColor="@color/white"
            android:textSize="24dp" />

    </RelativeLayout>

</RelativeLayout>
