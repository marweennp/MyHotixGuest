<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="144dp"
    android:background="@color/white">

    <!-- Event Row Header -->
    <RelativeLayout
        android:id="@+id/event_row_head"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_alignParentTop="true"
        android:background="#B3000000">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/event_row_date_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="4dp"
            android:tint="@color/white"
            app:srcCompat="@drawable/baseline_calendar_today_24" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/event_row_head_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/event_row_date_icon"
            android:text=""
            android:textColor="@color/white"
            android:textSize="16sp" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/event_row_time_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="4dp"
            android:layout_toStartOf="@+id/event_row_head_time"
            android:tint="@color/white"
            app:srcCompat="@drawable/baseline_schedule_24" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/event_row_head_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:text=""
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />


    </RelativeLayout>

    <!-- Event Row Corp -->
    <RelativeLayout
        android:id="@+id/event_row_corp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/event_row_head">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/event_row_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            app:srcCompat="@drawable/activites" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/event_row_head_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/event_row_image"
            android:text=""
            android:textColor="@color/colorBackground"
            android:textSize="16sp"
            android:textStyle="bold" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/event_row_head_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/event_row_head_title"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/event_row_image"
            android:ellipsize="end"
            android:maxLines="2"
            android:text=""
            android:textColor="@color/light_bg_dark_secondary_text"
            android:textSize="14sp" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/event_row_cat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            android:layout_toEndOf="@+id/event_row_image"
            android:text=""
            android:textColor="@color/light_bg_dark_secondary_text"
            android:textSize="14sp"
            android:textStyle="bold" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/event_row_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="8dp"
            android:text=""
            android:textColor="@color/colorBackground"
            android:textSize="20sp"
            android:textStyle="bold" />


    </RelativeLayout>

    <!-- Bottom Divider -->
    <View
        android:id="@+id/bottom_divider"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorBackground" />


</RelativeLayout>
