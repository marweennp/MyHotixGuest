<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/empty_list_main_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:visibility="gone">

    <!-- Empty List Container Layout (Img & Text) -->
    <LinearLayout
        android:id="@+id/empty_list_container_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <!-- Empty List Icon -->
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/empty_list_icon_iv"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:tint="@color/grey_400"
            app:srcCompat="@drawable/baseline_cloud_queue_24" />

        <!-- Empty List TextView -->
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/list_msg_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:text="@string/no_item_to_show"
            android:layout_margin="16dp"
            android:textColor="@color/grey_400"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Empty List Button -->
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/empty_list_refresh_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/empty_list_container_layout"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:text="@string/refresh"
        android:textColor="@color/colorPrimary" />

</RelativeLayout>